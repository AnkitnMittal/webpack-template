{
    "name": "webpack-template",
    "version": "1.0.0",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "webpack serve --config webpack.dev.js",
        "build": "webpack --config webpack.prod.js",
        "deploy": "npm run build && git subtree push --prefix dist origin gh-pages",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "format": "prettier . --write"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/AnkitnMittal/webpack-template.git"
    },
    "devDependencies": {
        "css-loader": "^7.1.3",
        "eslint": "^9.0.0",
        "eslint-config-prettier": "^10.1.8",
        "html-loader": "^5.1.0",
        "html-webpack-plugin": "^5.6.6",
        "prettier": "^3.8.1",
        "style-loader": "^4.0.0",
        "webpack": "^5.105.2",
        "webpack-cli": "^6.0.1",
        "webpack-dev-server": "^5.2.3",
        "webpack-merge": "^6.0.1"
    }
}
